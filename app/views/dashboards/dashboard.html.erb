          </div>
          <div class="title-header">
            <h2>Top Traded Cryptos</h2>
          </div>
        </div>
        <div class="top-traded">
          <% @top_five.each do |key, value|  %>
            <%= link_to 'dashboards' do %>
            <div class="top-traded-card">
              <h4 style="padding-right: 20px; color: #969696;">1</h4>
              <%= image_tag value, class: "portfolio-icon" %>
              <h4><%= key %> <span class="crypto-code"><%= value %></span></h4>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
