          <div class="title-header">
            <h2>Crypto News</h2>
          </div>
        </div>
        <div class="news-pane">
          <% @latest_news.first(10).each do |news| %>
            <%= link_to news["guid"] do %>
            <div class="news-card">
              <h4 class="news-title"><%= news["title"] %></h4>
              <p class="news-body"><%= news["body"] %></p>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
