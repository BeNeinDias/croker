          </div>
          <div class="change-timescale">
            <!-- Empty div to ensure border spacing -->
          </div>
        </div>
        <!-- #################################### -->
      </div>
      <!-- This is the end of the first box!!!!! -->

      <!-- This is the start of the second box!!!!! -->
      <div class="portfolio-stats dashboard-field">
