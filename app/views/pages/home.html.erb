<div class="landing-row-wrapper">
    <!-- Navigation -->
  <div class="navbar landing-navbar-custom navbar-fixed-top">
    <div class="nav-container ">
      <div class="croker-navbar-header">
        <div class="landing-nav-tabs navbar-collapse navbar-right navbar-main-collapse">
          <ul class="nav navbar-nav">
              <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
            <li class="hidden">
              <a href="#page-top"></a>
            </li>

            <li>
              <a class="page-scroll" href="#why-croker">Why Croker</a>
            </li>
            <li>
              <a class="page-scroll" href="#our-solution">Our Solution</a>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to dashboard_path do %> Dashboard
                <% end %>
              </li>
            <% end %>
            <% unless user_signed_in?  %>
              <li>
                <%= link_to "Login", new_user_session_path, class: "nav-sign-up-btn sign-up my-btn", "data-toggle" => "modal", "data-target" => "#myModal"%>
              </li>
              <li>
               <%= link_to "Sign Up", new_user_registration_path, class: "nav-sign-up-btn sign-up my-btn", "data-toggle" => "modal", "data-target" => "#myModal"%>
              </li>
            <% end  %>
          </ul>
        </div>
        <a class="navbar-brand page-scroll" href="#page-top">
        <%= link_to dashboard_path do %>
          <span class="landing-navbar-font-specs">Croker</span>
        </a>
        <% end %>
        <%= link_to dashboard_path do %>
        <%= image_tag 'logo.png', class: 'logo-navbar', style: "height: 50px" %>
        <% end %>
      </div>
       <!-- /.navbar-collapse -->
    </div>
     <!-- /.container -->
  </div>


   <!-- Intro Header -->
  <div class="landing-intro">
    <div class="container">
      <h1 class="brand-heading">Crypto Trading Made Easy</h1>
      <p class="intro-text"><strong>Croker</strong> is your <strong>gateway</strong> into the <strong>cryptosphere</strong>.
      </p>
        <%= link_to "Start Trading Now", dashboard_path, class: "lp-sign-up-btn"  %>
    </div>
    <div class="lp-dashboard-container text-center">
      <%= image_tag 'lp-dashboard-snap.png', class: 'dashboard-lp' %>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <%#= render "devise/registrations/new" %>
        </div>
      </div>
    </div>
    </div>
  </div>

  <!-- #################################################### -->

