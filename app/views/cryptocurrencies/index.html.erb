<div class="trade-container">
  <div class="page-wrapper">
    <!-- here starts the div that wraps the coins list on the left and the (buy/sell, chart) div on the right -->
    <div class="half-wrapper list">
      <div class="crypto-search text-center">
       <!--  <form>
          <input type="name" class="crypto-search-input form-control" id="cryptoSearch" placeholder="🔍 (Bitcoin, Ethereum, etc)">
        </form> -->
      <%= form_tag cryptocurrencies_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "🔍 (Bitcoin, Ethereum, etc)"
        %>
        <% end %>
      </div>


      <!-- Headers -->
      <div class="crypto-list-headers">
        <div class="product list-headers">
          <div class='list-inline product-controls product-body'>
            <li>Coin</li>
          </div>
          <ul class="list-inline product-controls">
            <li>Price</li>
            <li>Value Held</li>
          </ul>
        </div>
      </div>
      <div class="scrollable-crypto-list">

        <% @cryptocurrencies.each do |crypto| %>
          <%= link_to cryptocurrencies_path(crypto_id: crypto.id) do %>

            <div class="product">
              <%= image_tag crypto.ticker_code, class: "product-image" %>
              <div class='product-body'>
                <h3><%= crypto.ticker_name %></h3>
                <p><%= crypto.ticker_code %></p>
              </div>
              <ul class="list-inline product-controls">
                <li>
                  <%= @live_prices[crypto.ticker_name][crypto.ticker_code] %>
                  <%= CryptoCompareService::FIAT_CURRENCIES %>
                </li>
                <li>$4.321</li>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- here starts the show page, that has the coin chart, buy/sell option, etc -->
    <div id="current_cryptocurrency" class="half-wrapper show" >

      <!-- Render the show page inside this DIV -->
      <% if @cryptocurrency %>
        <%= render 'cryptocurrencies/show', cryptocurrency: @cryptocurrency %>
      <% else %>
        <%= render 'cryptocurrencies/grayed_show' %>
      <% end %>


    </div>
  </div>
</div>


<!-- This button is here just for development purposes, to log out -->

