<div class="navbar-croker">
  <div class="navbar-left">
    <%= link_to :root do %>
    <%= image_tag 'logo.png', class: "logo" %>
    <% end %>
    <div class="tabs">
      <%= link_to 'Dashboard', dashboard_path, class: 'tab', style: 'font-size: 20px' %>
      <% if controller.class == CryptocurrenciesController && controller.action_name == 'index' %>
      <%= link_to 'Buy/Sell', cryptocurrencies_path, class: 'tab active', style: 'font-size: 20px' %>
      <% else %>
      <%= link_to 'Buy/Sell', cryptocurrencies_path, class: 'tab', style: 'font-size: 20px' %>
      <% end %>
    </div>
  </div>
  <div class="navbar-right">
    <div class="btn-sign-up">
      <%= link_to 'Sign Up', new_user_registration_path, class: "sign-up btn btn-success", "data-toggle" => "modal", "data-target" => "#myModal"%>
    </div>

    <div class="btn-login">
      <%= link_to 'Log In', new_user_session_path, class: "login btn", "data-toggle" => "modal", "data-target" => "#myModal" %>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <%#= render "devise/registrations/new" %>
    </div>
  </div>
</div>
