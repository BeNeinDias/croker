<!-- app/views/payments/new.html.erb -->
<h1>Top Up of <%= humanized_money_with_symbol(@top_up.fiat_amount) %></h1>
<%= form_tag top_up_payments_path(@top_up) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@top_up.fiat_amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Top up my Croker account"
    data-email="<%= current_user.email %>"
    data-description="TopUp <%= humanized_money_with_symbol(@top_up.fiat_amount) %>"
    data-amount="<%= @top_up.fiat_amount_cents %>"
    data-currency="<%= @top_up.fiat_amount.currency %>"></script>
<% end %>
