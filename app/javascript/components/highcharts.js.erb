import Highcharts from "highcharts";

const buildCharts = (() => {
  Highcharts.chart('container', {

    chart: {
      type: 'area'
    },

    title: {
      text: '<%= @cryptocurrency.ticker_name %> Historical Price Information'
    },

    xAxis: {
      visible : false,
      type: 'datetime',
      labels: {
        format: '{value:%Y-%b-%e}'
      },
    },

    yAxis: {
      visible : false
    },

    tooltip: {
      xDateFormat: '%Y-%m-%d',
      pointFormat: 'USD{point.y}',
      shared: true
    },

    legend: {
      enabled: false
    },
    series: [{
      name : "|",
      data: <%= @data %>,
      lineColor: '#60cd44',
      color: '#60cd44',
      fillOpacity: 0.5,
      marker: {
        enabled: false
      },
      threshold: null
    }]

  });
});

export { buildCharts };
